<configuration>
<logger name="org.springframework" level="ERROR"></logger>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} - %-5level %15logger{0} - %15method - %msg%n</pattern>
    </encoder>
  </appender>
  
<appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
    <connectionSource class="com.excilys.computerdatabase.connections.LogConnection">
      <driverClass>com.mysql.jdbc.Driver</driverClass>
      <url>jdbc:mysql://localhost:3306/computer-database-db?zeroDateTimeBehavior=convertToNull</url>
      <user>root</user>
      <password>root</password>
    </connectionSource>
  </appender>

  <logger name="com.excilys.computerdatabase.servlets.Dashboard" level="DEBUG"/>
  
  <logger name="com.excilys.computerdatabase.services" level="WARN">
    <appender-ref ref="DB" />
  </logger>

  <!-- Strictly speaking, the level attribute is not necessary since -->
  <!-- the level of the root level is set to DEBUG by default.       -->
  <root level="DEBUG">          
    <appender-ref ref="STDOUT" />
  </root>  
  
</configuration>