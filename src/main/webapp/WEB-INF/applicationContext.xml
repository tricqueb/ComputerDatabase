<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.excilys.computerdatabase" />

	<!-- BoneCP configuration -->
	<bean id="DataSource" class="com.jolbox.bonecp.BoneCPDataSource"
		destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl"
			value="jdbc:mysql://localhost:3306/computer-database-db?zeroDateTimeBehavior=convertToNull" />
		<property name="username" value="root" />
		<property name="password" value="root" />
		<property name="defaultAutoCommit" value="true" />
	</bean>

	<bean id="companyService"
		class="com.excilys.computerdatabase.services.impl.CompanyServiceImpl">
	</bean>
	<bean id="computerService"
		class="com.excilys.computerdatabase.services.impl.ComputerServiceImpl">
	</bean>
	<bean id="computerDao" class="com.excilys.computerdatabase.dao.impl.ComputerDaoImpl">
	</bean>
	<bean id="companyDao" class="com.excilys.computerdatabase.dao.impl.CompanyDaoImpl">
	</bean>
	<bean class="com.excilys.computerdatabase.connections.LogConnection">
	</bean>

	<bean id="connectionManager"
		class="com.excilys.computerdatabase.connections.ConnectionManager">

	</bean>
</beans>